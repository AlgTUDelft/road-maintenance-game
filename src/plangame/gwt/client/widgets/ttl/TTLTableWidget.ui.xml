<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:plangame.gwt.client.widgets.controls">
  
  <ui:with type="plangame.gwt.client.resource.ClientResource" field="res" />
    <ui:with type="plangame.gwt.client.resource.locale.Lang" field="lang" />
  
  <g:VerticalPanel ui:field="pnlMain" styleName="{res.ttlcss.mainpanel}">
    <g:CheckBox ui:field="chkPayments" styleName="{res.ttlcss.paymentcheck}" text="{lang.W_TTL_ShowPayments}" />
    <g:Grid ui:field="grid" />
    <g:HTMLPanel ui:field="pnlOther" styleName="{res.ttlcss.grid} {res.ttlcss.otherpanel}">
      <ui:text from="{lang.W_TTL_OtherPlayer}" />
    </g:HTMLPanel>
  </g:VerticalPanel>
  
</ui:UiBinder> 